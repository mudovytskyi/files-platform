{
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	],
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"baseUrl": ".",
		"rootDir": "./",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@*": [
				"./src/*"
			],
			"@handlers/*": [
				"./src/router/handlers/*"
			]
		}
	}
}
