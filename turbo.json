{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				"dist/**"
			]
		},
		"lint": {
			"outputs": [],
			"cache": true,
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"eslint.config.js",
				"../../eslint.config.js",
				"../../packages/config/eslint/**/*"
			],
			"dependsOn": [
				"^lint"
			]
		},
		"format": {
			"outputs": [],
			"cache": true,
			"inputs": [
				"src/**/*.{ts,tsx,js,jsx}",
				"eslint.config.js",
				"../../eslint.config.js",
				"../../packages/config/eslint/**/*"
			],
			"dependsOn": [
				"^lint:fix"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": [
				"build"
			],
			"outputs": []
		}
	}
}